<div class="d-flex bd-highlight">
  <div class="p-2 w-25 bd-highlight"><img src={{movie.image}} alt={{movie.title}} class="shadow"></div>
  <div class="p-2 bd-highlight w-75">
    <a href="/movies">Go Back</a>
    <h2>{{movie.title}}</h2>
    <h3> Director: {{movie.director}}</h3>
    <h4> Stars</h4>
      <ul>
        {{#each movie.stars as |star|}}
          <li>{{star}}</li>
        {{/each}}
      </ul>
    <p>{{movie.description}}</p>
    <p>
      {{#each movie.showtimes as |time|}}
        {{time}} |
      {{/each}}
    </p>
    
  </div>
</div>